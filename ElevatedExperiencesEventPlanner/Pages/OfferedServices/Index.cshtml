@page "{searchString?}"
@model ElevatedExperiencesEventPlanner.Pages.OfferedServices.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Services</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>

<form>
    <p>
        Service Name: <input type="text" asp-for="SearchString" />
        <input type="submit" value="Filter" />
    <a asp-page="./Index" asp-route-sortOrder="desc">
           
            Sort by Name (descending)
        </a>
        <a asp-page="./Index" asp-route-sortOrder="asc">

            Sort by Name (ascending)
        </a>
        
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                
                @Html.DisplayNameFor(model => model.OfferedService[0].Name)
                
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OfferedService[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OfferedService[0].Rate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.OfferedService) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rate)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
